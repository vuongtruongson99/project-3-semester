<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" style="-fx-background-color: #d32f2f;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rtu.mirea.project.controller.SignupController">
    <children>
        <AnchorPane layoutY="100.0" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <TextField fx:id="signupFirstName" layoutX="100.0" layoutY="51.0" prefHeight="40.0" prefWidth="400.0" promptText="First Name">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="signupLastName" layoutX="100.0" layoutY="105.0" prefHeight="40.0" prefWidth="400.0" promptText="Last Name">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="signupUsername" layoutX="100.0" layoutY="162.0" prefHeight="40.0" prefWidth="400.0" promptText="Username">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="signupPassword" layoutX="100.0" layoutY="219.0" prefHeight="40.0" prefWidth="400.0" promptText="Password">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <CheckBox fx:id="signupCheckBoxMale" layoutX="210.0" layoutY="265.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="90.0" selected="true" text="Male" textFill="#8a8a8a">
                    <font>
                        <Font size="15.0" />
                    </font>
                </CheckBox>
                <CheckBox fx:id="signupCheckBoxFemale" layoutX="300.0" layoutY="265.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="90.0" text="Female" textFill="#8d8a8a">
                    <font>
                        <Font size="15.0" />
                    </font>
                </CheckBox>
                <TextField fx:id="signupLocation" layoutX="100.0" layoutY="313.0" prefHeight="40.0" prefWidth="400.0" promptText="Location">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <Button fx:id="signupButton" layoutX="100.0" layoutY="377.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: #424242;" text="Sign Up" textFill="WHITE">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Button>
                <Label alignment="CENTER_RIGHT" layoutX="175.0" layoutY="432.0" prefHeight="40.0" prefWidth="170.0" text="Already have an account?">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Hyperlink fx:id="signupLogin" layoutX="345.0" layoutY="432.0" prefHeight="40.0" prefWidth="170.0" text="Login Here">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Hyperlink>
            </children>
        </AnchorPane>
        <Label alignment="CENTER" layoutX="243.0" layoutY="23.0" text="Sign Up" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font size="37.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
